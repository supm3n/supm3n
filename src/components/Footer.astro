---
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-inner">
      <div class="footer-meta">
        <span class="copyright">&copy; {year} Supm3n</span>
        <span class="divider" aria-hidden="true">|</span>
        <span class="status">
          <span class="status-dot"></span>
          Online
        </span>
      </div>

      <nav class="footer-nav">
        <a href="/projects">Projects</a>
        <a href="/uses">Uses</a>
        <a href="/privacy">Privacy</a>
        <a href="mailto:contact@supm3n.com">Contact</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: auto;
    border-top: 1px solid var(--glass-border);
    background: var(--glass-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 1.5rem 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
  }

  /* Meta Section (Left) */
  .footer-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .divider {
    opacity: 0.3;
  }

  .copyright {
    font-weight: 500;
    color: var(--color-text-primary);
  }

  /* Status Indicator */
  .status {
    display: flex;
    align-items: center;
    gap: 8px;
    opacity: 0.8;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background-color: #10b981;
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
    animation: pulse 3s infinite ease-in-out;
  }

  /* Navigation (Right) */
  .footer-nav {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  /* Link Styling - Explicitly overrides default blue/purple */
  .footer-nav a,
  .footer-nav a:visited,
  .footer-nav a:active {
    text-decoration: none;
    color: var(--color-text-muted);
    font-weight: 500;
    transition:
      color 0.2s ease,
      transform 0.2s ease;
    font-size: 0.95rem;
  }

  .footer-nav a:hover {
    color: var(--color-accent-start);
    transform: translateY(-1px);
  }

  /* Animation */
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(0.9);
    }
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .footer-inner {
      flex-direction: column-reverse;
      gap: 1.25rem;
      text-align: center;
    }

    .footer-nav {
      justify-content: center;
      gap: 1.5rem;
    }
  }
</style>
