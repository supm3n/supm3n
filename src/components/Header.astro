---
const pathname = new URL(Astro.request.url).pathname;
---

<header class="site-header">
  <div class="header-fluid">
    <div class="header-inner">
      <a href="/" class="brand" aria-label="Supm3n Home">
        <div class="brand-logo-wrapper">
          <img
            src="/logo.png"
            alt="Supm3n Logo"
            class="brand-logo"
            width="36"
            height="36"
          />
        </div>
        <span class="brand-name">Supm3n</span>
      </a>

      <nav class="main-nav">
        <a href="/" class={`nav-link ${pathname === "/" ? "active" : ""}`}>
          Home
        </a>
        <a
          href="/projects"
          class={`nav-link ${pathname.startsWith("/projects") || pathname.startsWith("/settleup") || pathname.startsWith("/stock-viewer") ? "active" : ""}`}
        >
          Projects
        </a>
        <a
          href="/uses"
          class={`nav-link ${pathname.startsWith("/uses") ? "active" : ""}`}
        >
          Uses
        </a>
      </nav>

      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
        <svg
          class="sun-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          style="display: none;"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
        <svg
          class="moon-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          style="display: none;"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    width: 100%;
    background: rgba(11, 12, 16, 0.7); /* Fallback */
    background: var(--glass-bg);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    border-bottom: 1px solid var(--glass-border);
    transition:
      transform var(--transition-base),
      background var(--transition-base),
      border-color var(--transition-base);
  }

  /* Fluid container overrides the global max-width */
  .header-fluid {
    width: 100%;
    padding: 0 var(--space-md);
    margin: 0 auto;
    max-width: var(--container-max);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: var(--space-md);
    width: 100%;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 700;
    font-size: var(--text-lg);
    letter-spacing: -0.02em;
    transition: opacity var(--transition-fast);
    line-height: 1;
    text-decoration: none;
    color: var(--color-text-primary);
  }

  .brand:hover {
    opacity: 0.8;
  }

  .brand-logo-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-logo {
    width: 32px;
    height: 32px;
    display: block;
    object-fit: contain;
    filter: drop-shadow(0 0 8px rgba(124, 58, 237, 0.4));
    transition: filter var(--transition-base);
  }

  .brand:hover .brand-logo {
    filter: drop-shadow(0 0 12px rgba(124, 58, 237, 0.6));
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 4px;
    background: var(--color-surface-2);
    padding: 4px;
    border-radius: 12px;
    border: 1px solid var(--glass-border);
  }

  .nav-link {
    position: relative;
    padding: 6px 16px;
    border-radius: 8px;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    transition:
      color var(--transition-fast),
      background var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.05);
  }

  [data-theme="light"] .nav-link:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .nav-link.active {
    color: var(--color-text-primary);
    background: var(--color-surface-1);
    box-shadow: var(--shadow-sm);
  }

  .theme-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: transparent;
    border: 1px solid transparent;
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
    cursor: pointer;
  }

  .theme-toggle:hover,
  .theme-toggle:focus-visible {
    color: var(--color-text-primary);
    background: var(--color-surface-2);
    border-color: var(--glass-border);
    outline: none;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .brand-name {
      display: none;
    }
    .nav-link {
      padding: 6px 12px;
      font-size: var(--text-xs);
    }
  }
</style>
