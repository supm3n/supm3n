---
// src/components/Header.astro
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="site-header">
  <div class="container">
    <div class="header-inner">
      
      <!-- 1. Logo / Brand (Links to Home) -->
      <a href="/" class="brand" aria-label="Supm3n Home">
        <!-- Assuming you have a logo.png in /public, otherwise remove the img tag -->
        <img src="/logo.png" alt="" class="brand-logo" width="36" height="36" />
        <span class="brand-name">Supm3n</span>
      </a>

      <!-- 2. Main Navigation -->
      <nav class="main-nav">
        <a 
          href="/" 
          class={`nav-link ${pathname === '/' ? 'active' : ''}`}
        >
          Home
        </a>

        <a 
          href="/projects" 
          class={`nav-link ${pathname.startsWith('/projects') || pathname.startsWith('/settleup') || pathname.startsWith('/snake') || pathname.startsWith('/stock-viewer') ? 'active' : ''}`}
        >
          Projects
        </a>

        <a 
          href="/uses" 
          class={`nav-link ${pathname.startsWith('/uses') ? 'active' : ''}`}
        >
          Uses
        </a>

        <!-- 3. Theme Toggle Button -->
        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
          <!-- Sun Icon (shown in light mode) -->
          <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <!-- Moon Icon (shown in dark mode) -->
          <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </nav>
    </div>
  </div>
</header>