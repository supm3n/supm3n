---
const pathname = new URL(Astro.request.url).pathname;
---

<header class="site-header">
  <div class="header-fluid">
    <div class="header-inner">
      <a href="/" class="brand" aria-label="Supm3n Home">
        <div class="brand-logo-wrapper">
          <img
            src="/logo.png"
            alt="Supm3n Logo"
            class="brand-logo"
            width="36"
            height="36"
          />
        </div>
        <span class="brand-name">Supm3n</span>
      </a>

      <nav class="main-nav">
        <a href="/" class={`nav-link ${pathname === "/" ? "active" : ""}`}>
          Home
        </a>
        <a
          href="/projects"
          class={`nav-link ${pathname.startsWith("/projects") ? "active" : ""}`}
        >
          Projects
        </a>
        <a
          href="/uses"
          class={`nav-link ${pathname.startsWith("/uses") ? "active" : ""}`}
        >
          Uses
        </a>
      </nav>

      <div class="header-actions">
        <button
          id="theme-toggle"
          class="theme-toggle"
          aria-label="Toggle theme"
        >
          <svg
            class="sun-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            style="display: none;"
          >
            <circle cx="12" cy="12" r="5"></circle><line
              x1="12"
              y1="1"
              x2="12"
              y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line
              x1="4.22"
              y1="4.22"
              x2="5.64"
              y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
            ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
              x1="21"
              y1="12"
              x2="23"
              y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"
            ></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <svg
            class="moon-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            style="display: none;"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    width: 100%;
    background: var(--glass-bg);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);

    /* The Extra: Gradient Border Bottom */
    border-bottom: 1px solid transparent;
    border-image: linear-gradient(
        to right,
        var(--glass-border),
        var(--color-accent-start),
        var(--glass-border)
      )
      1;
    border-bottom: 1px solid var(--glass-border); /* Fallback */

    transition:
      background 0.3s,
      border-color 0.3s;
  }

  .header-fluid {
    width: 100%;
    padding: 0 var(--space-md);
    margin: 0 auto;
    max-width: var(--container-max);
  }

  /* Grid Layout for Perfect Centering */
  .header-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr; /* Three equal parts logic */
    align-items: center;
    height: var(--header-height);
    width: 100%;
  }

  /* BRAND (Left) */
  .brand {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 700;
    font-size: var(--text-lg);
    letter-spacing: -0.02em;
    text-decoration: none;
    color: var(--color-text-primary);
    justify-self: start;
  }

  /* The Extra: Logo Animation */
  .brand-logo-wrapper {
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  .brand:hover .brand-logo-wrapper {
    transform: rotate(-10deg) scale(1.1);
  }

  .brand-logo {
    width: 32px;
    height: 32px;
    object-fit: contain;
    filter: drop-shadow(0 0 8px rgba(139, 92, 246, 0.4));
  }

  /* NAV (Center) - Original Container Style */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 4px;
    background: var(--color-surface-2);
    padding: 4px;
    border-radius: 12px;
    border: 1px solid var(--glass-border);
    justify-self: center;
    transition: box-shadow 0.3s ease;
  }

  /* The Extra: Subtle glow on the container itself */
  .main-nav:hover {
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    border-color: rgba(139, 92, 246, 0.2);
  }

  .nav-link {
    position: relative;
    padding: 6px 16px;
    border-radius: 8px;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    transition:
      color 0.2s,
      background 0.2s,
      box-shadow 0.2s;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.05);
  }

  [data-theme="light"] .nav-link:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .nav-link.active {
    color: var(--color-text-primary);
    background: var(--color-surface-1);

    /* The Extra: Slightly enhanced active state */
    box-shadow:
      var(--shadow-sm),
      0 0 0 1px rgba(139, 92, 246, 0.1);
  }

  /* ACTIONS (Right) */
  .header-actions {
    justify-self: end;
    display: flex;
    align-items: center;
  }

  .theme-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: transparent;
    border: 1px solid transparent;
    color: var(--color-text-primary);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  /* The Extra: Toggle Rotation */
  .theme-toggle:hover {
    background: var(--color-surface-2);
    color: var(--color-accent-start);
    border-color: var(--glass-border);
    transform: rotate(15deg);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header-inner {
      display: flex;
      justify-content: space-between;
    }
    .brand-name {
      display: none;
    }

    /* Simplify nav on mobile */
    .main-nav {
      gap: 0;
      padding: 2px;
      background: transparent;
      border: none;
    }
    .nav-link {
      padding: 6px 10px;
      font-size: 0.85rem;
    }
    .nav-link.active {
      background: transparent;
      color: var(--color-accent-start);
      box-shadow: none;
    }
  }
</style>
