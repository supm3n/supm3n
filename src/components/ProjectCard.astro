---
const { project } = Astro.props;
---

<article class="project-card spotlight-card reveal">
    <div class="spotlight-overlay"></div>

    <div class="scanner-beam"></div>

    <div class="scanner-grid"></div>

    <a
        href={project.url}
        class="project-card-link"
        aria-label={`Open ${project.name}`}
    >
        <div class="card-content">
            <div class="project-card-header">
                <div class="project-icon-wrapper">
                    <div class="icon-grid-bg"></div>

                    <div class="icon-inner">
                        {
                            project.icon &&
                            project.icon.trim().startsWith("<svg") ? (
                                <div
                                    class="project-icon-svg"
                                    set:html={project.icon}
                                />
                            ) : project.icon.includes(".") ? (
                                <img
                                    class="project-icon-img"
                                    src={project.icon}
                                    alt={project.name}
                                />
                            ) : (
                                <div class="project-icon-emoji">
                                    {project.icon}
                                </div>
                            )
                        }
                    </div>
                </div>

                <div class="arrow-wrapper">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <line x1="7" y1="17" x2="17" y2="7"></line>
                        <polyline points="7 7 17 7 17 17"></polyline>
                    </svg>
                </div>
            </div>

            <div class="project-info">
                <h3 class="project-title">
                    {project.name}
                    <span class="status-dot"></span>
                </h3>
                <p class="project-description">{project.description}</p>
            </div>

            <div class="project-meta">
                <span class="project-tag">
                    <span class="bracket">[</span>
                    {project.tag}
                    <span class="bracket">]</span>
                </span>
            </div>
        </div>
    </a>
</article>

<style>
    /* ----------------------
       1. Base Card
       ---------------------- */
    .project-card {
        position: relative;
        border-radius: 16px;
        background: var(--color-surface-2);
        background-color: rgba(20, 20, 25, 0.4);
        border: 1px solid var(--glass-border);
        overflow: hidden;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        mask-image: radial-gradient(white, black);
        -webkit-mask-image: -webkit-radial-gradient(white, black);
    }

    .project-card:hover {
        transform: translateY(-5px);
        border-color: rgba(139, 92, 246, 0.5);
        box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.5);
    }

    /* ----------------------
       2. Scanner Animations
       ---------------------- */
    .scanner-beam {
        position: absolute;
        top: -100%;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            transparent 50%,
            rgba(139, 92, 246, 0.1) 90%,
            rgba(6, 182, 212, 0.8) 100%
        );
        z-index: 4;
        opacity: 0;
        pointer-events: none;
        mix-blend-mode: overlay;
    }

    .project-card:hover .scanner-beam {
        opacity: 1;
        animation: scan 2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    }

    @keyframes scan {
        0% {
            top: -100%;
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            top: 100%;
            opacity: 0;
        }
    }

    .scanner-grid {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            ),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            );
        background-size: 30px 30px;
        z-index: 1;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.4s;
    }

    .project-card:hover .scanner-grid {
        opacity: 1;
    }

    /* ----------------------
       3. Layout
       ---------------------- */
    .card-content {
        position: relative;
        z-index: 5;
        padding: 1.75rem;
        height: calc(100% - 2px);
        display: flex;
        flex-direction: column;
        background: linear-gradient(
            180deg,
            rgba(255, 255, 255, 0.01) 0%,
            rgba(0, 0, 0, 0.2) 100%
        );
    }

    .project-card-link {
        text-decoration: none;
        color: inherit;
        height: 100%;
        display: block;
    }

    .project-card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    /* ----------------------
       4. ICON BOX (Fixed Alignment)
       ---------------------- */
    .project-icon-wrapper {
        width: 56px;
        height: 56px;
        /* "Chip" Shape */
        clip-path: polygon(
            0 12px,
            12px 0,
            100% 0,
            100% calc(100% - 12px),
            calc(100% - 12px) 100%,
            0 100%
        );
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);

        /* ALIGNMENT FIX: Use Flexbox with 0 line-height to avoid baseline shift */
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 0;

        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.5);
    }

    .icon-inner {
        width: 28px;
        height: 28px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 2;

        /* Ensure it stays centered */
        margin: auto;
    }

    /* SVG Styling */
    :global(.project-icon-svg svg) {
        width: 28px;
        height: 28px;
        color: var(--color-text-muted);
        transition: all 0.3s ease;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
        /* Ensure SVG scales correctly */
        display: block;
    }

    /* Image Styling */
    .project-icon-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: grayscale(1);
        transition: all 0.3s ease;
        display: block;
    }

    /* Inner Grid */
    .icon-grid-bg {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(
                rgba(139, 92, 246, 0.2) 1px,
                transparent 1px
            ),
            linear-gradient(90deg, rgba(139, 92, 246, 0.2) 1px, transparent 1px);
        background-size: 6px 6px;
        opacity: 0;
        transition: opacity 0.3s;
        z-index: 1;
    }

    /* HOVER EFFECTS */
    .project-card:hover .project-icon-wrapper {
        background: rgba(0, 0, 0, 0.6);
        border-color: rgba(139, 92, 246, 0.5);
        box-shadow: inset 0 0 20px rgba(139, 92, 246, 0.2);
    }

    .project-card:hover .icon-grid-bg {
        opacity: 1;
    }

    /* Glitch Effect on Hover */
    .project-card:hover :global(.project-icon-svg svg),
    .project-card:hover .project-icon-img {
        color: #fff;
        filter: grayscale(0) drop-shadow(0 0 5px rgba(139, 92, 246, 0.5));
        animation: holo-glitch 0.3s infinite linear alternate-reverse;
    }

    @keyframes holo-glitch {
        0% {
            transform: translate(0) scale(1);
            opacity: 1;
        }
        25% {
            transform: translate(-2px, 1px) scale(1.05);
            opacity: 0.8;
        }
        50% {
            transform: translate(2px, -1px) scale(1);
            opacity: 1;
        }
        75% {
            transform: translate(-1px, -2px) scale(1.05);
            opacity: 0.8;
        }
        100% {
            transform: translate(0) scale(1);
            opacity: 1;
        }
    }

    /* Arrow */
    .arrow-wrapper {
        color: var(--color-text-muted);
        opacity: 0.5;
        transition: all 0.3s;
    }
    .project-card:hover .arrow-wrapper {
        opacity: 1;
        color: #fff;
        transform: translate(2px, -2px);
        filter: drop-shadow(0 0 8px var(--color-accent-start));
    }

    /* ----------------------
       5. Typography
       ---------------------- */
    .project-info {
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-text-primary);
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 8px;
        letter-spacing: -0.02em;
        transition: text-shadow 0.3s;
    }

    .project-card:hover .project-title {
        text-shadow: 0 0 15px rgba(139, 92, 246, 0.6);
    }

    .status-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: var(--color-accent-start);
        opacity: 0.3;
        transition: all 0.3s;
    }

    .project-card:hover .status-dot {
        opacity: 1;
        background-color: #06b6d4;
        box-shadow: 0 0 10px #06b6d4;
        animation: pulse-fast 0.5s infinite alternate;
    }

    .project-description {
        font-family: var(--font-mono, monospace);
        font-size: 0.85rem;
        color: var(--color-text-muted);
        line-height: 1.6;
        margin: 0;
        transition: color 0.3s;
    }

    .project-card:hover .project-description {
        color: var(--color-text-primary);
    }

    /* Tags */
    .project-meta {
        margin-top: auto;
    }

    .project-tag {
        font-family: var(--font-mono, monospace);
        font-size: 0.75rem;
        color: var(--color-text-muted);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s;
    }

    .bracket {
        color: var(--color-accent-start);
        opacity: 0.5;
        transition: opacity 0.3s;
        display: inline-block;
    }

    .project-card:hover .bracket {
        opacity: 1;
        text-shadow: 0 0 8px var(--color-accent-start);
    }

    .project-card:hover .project-tag {
        color: #fff;
        text-shadow: 0 0 8px rgba(6, 182, 212, 0.8);
    }

    /* Spotlight */
    .spotlight-overlay {
        pointer-events: none;
        position: absolute;
        inset: 0;
        z-index: 2;
        background: radial-gradient(
            600px circle at var(--mouse-x) var(--mouse-y),
            rgba(255, 255, 255, 0.06),
            transparent 40%
        );
        opacity: 0;
        transition: opacity 0.5s;
    }
    .project-card:hover .spotlight-overlay {
        opacity: 1;
    }

    @keyframes pulse-fast {
        from {
            opacity: 0.7;
        }
        to {
            opacity: 1;
        }
    }
    .reveal {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s ease;
    }
    .reveal.visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    function initSpotlight() {
        const cards = document.querySelectorAll(".spotlight-card");
        document.addEventListener("mousemove", (e) => {
            cards.forEach((card) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                // @ts-ignore
                card.style.setProperty("--mouse-x", `${x}px`);
                // @ts-ignore
                card.style.setProperty("--mouse-y", `${y}px`);
            });
        });
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting)
                        entry.target.classList.add("visible");
                });
            },
            { threshold: 0.1 },
        );
        cards.forEach((el) => observer.observe(el));
    }
    initSpotlight();
</script>
